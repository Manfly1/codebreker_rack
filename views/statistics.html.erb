<p class="lead text-white-70">Top of Players:</p>
<hr class="mb-4" />
<div class="table-responsive-md scores">
</div>
<% if CodebrekerManfly::Game.user_statistic.any?
 %>
<table class="table table-striped table table-sm text-white">
  <thead>
    <tr>
      <th scope="col"> #</th>
      <th scope="col"> Name</th>
      <th scope="col"> Level</th>
      <th scope="col"> Attempts Left</th>
      <th scope="col"> Hints Left</th>
      <th scope="col"> Date</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
  <% CodebrekerManfly::Game.user_statistic.each_with_index do |stats, index|
 %>
  <tr>
    <th scope="row"><%= index + 1 %>
    </th>
    <td><%= stats.user.name %>
    </td>
    <td><%= stats.difficulty.name %>
    </td>
    <td><%= stats.difficulty.attempts - stats.attempts %>/<%= stats.difficulty.attempts %></td>
    <td><%= stats.difficulty.hints - stats.hints %>/<%= stats.difficulty.hints %></td>
    <td><%= stats.date.strftime('%Y.%m.%d - %H:%M') %>
    </td>
  </tr>
<% end %></table>
<% else
 %>
<p class="lead m-4">No statistic yet...</p>
<% end %><hr class="mb-4" />
<a class="btn btn-primary btn-lg" href="/" role="button">
  Home
</a>
