<p class="lead text-white">
  Hello, <%= game.user.name %>!
  Try to guess 4-digit number, that consists of numbers in a range from 1 to 6.
</p>
<hr class="mb-4" />
<div class="row">
  <div class="col button">
    <button class="btn btn-primary" type="button">
      Level: 
      <span class="badge badge-light"><%= game.difficulty.name %>
      </span></button></div>
  <div class="col text-center button">
    <button class="btn btn-primary" type="button">
      Attempts: 
      <span class="badge badge-light"><%= game.attempts_amount %>
      </span></button></div>
  <div class="col button">
  </div>
  <% if game.hints_amount.positive?
 %><button class="btn btn-primary float-right" type="button">
    Hints: 
    <span class="badge badge-light"><%= game.hints_amount %>
    </span></button><% else
 %><button class="btn btn-primary float-right" type="button">
  Hints: 
  <span class="badge badge-light"><%= game.hints_amount %>
  </span></button><% end %></div>
<hr class="mb-4" />
<form action="/game" method="post">
  <div class="form-group">
    <input autocomplete="off" autofocus="" class="form-control guess_input" name="number" pattern="^[1-6]{4}$" placeholder="<%= guess.nil? ? '1234' : guess %>" required="" />
  </div>
  <div class="form-group guess_markers_list">
    <div id="guess_marker">
    </div>
    <% unless answer.nil?
answer.chars.each do |char|
case char
when '+'
 %><button class="btn btn-success marks" type="button"> +</button>
    <% when '-'
 %><button class="btn btn-primary marks" disabled="" type="button"> -</button>
  <% end; end; (CodebrekerManfly::CodeGenerator::DEFAULT_CODE_LENGTH - answer.length).times do
 %><button class="btn btn-danger marks" type="button"> x</button>
<% end; end %></div>
<hr class="mb-4" />
<button class="btn btn-primary btn-lg" type="submit">
  Submit
</button><% if game.hints_amount.positive?
 %><a class="btn btn-warning btn-lg float-right" href="/hint" role="button">
  Show hint!
  <% hints.each do |hint|
 %><span class="badge badge-light"><%= hint %>
  </span><% end %></a><% else
 %><button class="btn-warning btn-lg float-right" disabled="" type="button">
  Show hint!
  <% hints.each do |hint|
 %><span class="badge badge-light"><%= hint %>
  </span><% end %></button><% end %></form>
