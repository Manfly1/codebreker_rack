<div class="row">
  <div class="col button">
    <button class="btn btn-primary" disabled="" type="button">
      Level:
      <span class="badge badge-light"><%= game.difficulty.name %>
      </span></button><button class="btn btn-primary" disabled="" type="button">
      Attempts Left:
      <span class="badge badge-light">
        0/<%= game.difficulty.attempts %>
      </span></button><button class="btn btn-primary" disabled="" type="button">
      Hints Left:
      <span class="badge badge-light">
        <%= game.hints_amount %>/<%= game.difficulty.hints %>
      </span></button></div>
</div>
<hr class="mb-4" />
<div class="row">
  <div class="text-center">
    <div class="text-center">
      <h3 class="text-white">
        Oops, <%= game.user.name %>! You lose the game!
      </h3>
      <h4 class="text-white">
        The code was
        <strong><%= game.code %>
        </strong></h4>
    </div>
    <img <% _slim_codeattributes1 = ("You lose the game!"); if _slim_codeattributes1; if _slim_codeattributes1 == true %> alt=""<% else %> alt="<%= _slim_codeattributes1 %>"<% end; end %> class="img-fluid" src="assets/images/lost.gif" />
    </div>
  </div>
  <hr class="mb-4" />
  <a class="btn btn-primary btn-lg" href="/restart" role="button">
    Play again!
  </a><a class="btn btn-success btn-lg float-right" href="/statistics" role="button">
    Statistics
  </a>